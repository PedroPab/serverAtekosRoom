{
	"name": "server-atekos-room",
	"version": "1.0.0",
	"description": "El servidor principal para mis proyectos de domotica, rob√≥tica, electronica. Para tener mi propio servicios personalizado",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"start": "export NODE_ENV=production ; node src/server.js",
		"dev": "export NODE_ENV=development ; nodemon src/server.js",
		"upDb": "firebase emulators:start --only firestore",
		"deploy:engine": "gcloud beta app deploy --project=atekos-369512",
		"log": "gcloud app logs tail -s default",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"open:coverage": "open coverage/lcov-report/index.html",
		"build": "docker build -t gcr.io/$GCP_PROJECT_ID/$NAME_IMG .",
		"push": "docker push gcr.io/$GCP_PROJECT_ID/$NAME_IMG",
		"deploy": "gcloud run deploy $NAME_SERVICE --image gcr.io/$GCP_PROJECT_ID/$NAME_IMG --platform managed --region $REGION --allow-unauthenticated --min-instances 0 --max-instances 1 --memory 512Mi --cpu 1",
		"full-deploy": "npm run build ; npm run push ; npm run deploy"
	},
	"engines": {
		"node": "18"
	},
	"dependencies": {
		"@google-cloud/storage": "^7.12.1",
		"@hapi/boom": "^10.0.1",
		"chalk": "^5.3.0",
		"cors": "^2.8.5",
		"dotenv": "^8.6.0",
		"express": "^4.19.2",
		"firebase-admin": "^12.5.0",
		"fluent-ffmpeg": "^2.1.3",
		"multer": "^1.4.5-lts.1",
		"multer-cloud-storage": "^3.1.0",
		"ws": "^8.16.0"
	},
	"devDependencies": {
		"@babel/core": "^7.24.7",
		"@babel/plugin-transform-modules-commonjs": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@eslint/js": "^9.12.0",
		"babel-jest": "^29.7.0",
		"babel-plugin-transform-import-meta": "^2.2.1",
		"eslint": "^9.12.0",
		"eslint-plugin-jest": "^28.8.3",
		"globals": "^15.11.0",
		"jest": "^29.7.0",
		"nodemon": "^3.0.2",
		"supertest": "^7.0.0",
		"typescript-eslint": "^8.8.1"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/PedroPab/serverAtekosRoom.git"
	},
	"keywords": [
		"express",
		"api",
		"domotica",
		"iot",
		"node"
	],
	"author": "Pedro Montes",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/PedroPab/serverAtekosRoom/issues"
	},
	"homepage": "https://github.com/PedroPab/serverAtekosRoom#readme"
}